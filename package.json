{
  "name": "ai-accountant-saas",
  "version": "1.0.0",
  "description": "AI Accountant SaaS - Complete autonomous accounting system",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:coverage": "jest --runInBand --coverage",
    "test:ci": "jest --runInBand --coverage --ci",
    "test:watch": "jest --watch",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:migrate": "cd services/database && npm run migrate",
    "db:seed": "cd services/database && npm run seed"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@types/uuid": "^10.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "turbo": "^1.10.16",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  }
}
