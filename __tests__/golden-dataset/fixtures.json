{
  "version": "1.0.0",
  "description": "Golden dataset for testing OCR → classification → ledger → filing pipeline",
  "fixtures": [
    {
      "id": "invoice-001",
      "documentType": "invoice",
      "fileName": "sample-invoice.pdf",
      "expectedOCR": {
        "rawText": "INVOICE\nInvoice Number: INV-2024-001\nDate: 2024-01-15\nVendor: Acme Corp\nTotal: £1,200.00\nVAT: £240.00",
        "tokens": [
          {"text": "INVOICE", "bbox": {"x": 100, "y": 50, "width": 200, "height": 30}},
          {"text": "Invoice Number: INV-2024-001", "bbox": {"x": 100, "y": 100, "width": 300, "height": 20}}
        ]
      },
      "expectedClassification": {
        "documentType": "invoice",
        "confidence": 0.98,
        "extractedData": {
          "vendor": "Acme Corp",
          "invoiceNumber": "INV-2024-001",
          "date": "2024-01-15",
          "total": 1200.00,
          "tax": 240.00,
          "currency": "GBP"
        }
      },
      "expectedLedger": {
        "entries": [
          {
            "accountCode": "4000",
            "description": "Acme Corp - INV-2024-001",
            "debitAmount": 1200.00,
            "creditAmount": 0
          },
          {
            "accountCode": "2000",
            "description": "VAT Input",
            "debitAmount": 240.00,
            "creditAmount": 0
          }
        ]
      },
      "expectedFiling": {
        "vatReturn": {
          "box1": 240.00,
          "box4": 240.00,
          "box6": 1200.00
        }
      }
    },
    {
      "id": "receipt-001",
      "documentType": "receipt",
      "fileName": "sample-receipt.jpg",
      "expectedOCR": {
        "rawText": "RECEIPT\nDate: 2024-01-20\nTotal: £45.50\nVAT: £7.58",
        "tokens": []
      },
      "expectedClassification": {
        "documentType": "receipt",
        "confidence": 0.95,
        "extractedData": {
          "date": "2024-01-20",
          "total": 45.50,
          "tax": 7.58,
          "currency": "GBP"
        }
      },
      "expectedLedger": {
        "entries": [
          {
            "accountCode": "5000",
            "description": "Expense Receipt",
            "debitAmount": 45.50,
            "creditAmount": 0
          }
        ]
      },
      "expectedFiling": null
    },
    {
      "id": "statement-001",
      "documentType": "bank_statement",
      "fileName": "bank-statement.csv",
      "expectedOCR": {
        "rawText": "Statement for Jan 2024",
        "tokens": []
      },
      "expectedClassification": {
        "documentType": "statement",
        "confidence": 0.92,
        "extractedData": {
          "openingBalance": 10250.25,
          "closingBalance": 9850.55,
          "currency": "GBP"
        }
      },
      "expectedLedger": {
        "entries": [
          { "accountCode": "1200", "description": "Bank Opening", "debitAmount": 10250.25, "creditAmount": 0 },
          { "accountCode": "1200", "description": "Bank Closing", "debitAmount": 0, "creditAmount": 9850.55 }
        ]
      },
      "expectedFiling": null
    },
    {
      "id": "vat-return-2024q2",
      "documentType": "vat_return",
      "fileName": "vat-q2-2024.json",
      "expectedOCR": {
        "rawText": "VAT Return for 2024 Q2",
        "tokens": []
      },
      "expectedClassification": {
        "documentType": "tax_form",
        "confidence": 0.96,
        "extractedData": {
          "period": "2024-Q2",
          "box1": 3200,
          "box4": 900,
          "box6": 16000,
          "currency": "GBP"
        }
      },
      "expectedLedger": {
        "entries": [
          { "accountCode": "2200", "description": "VAT Payable", "debitAmount": 900, "creditAmount": 3200 }
        ]
      },
      "expectedFiling": {
        "vatReturn": {
          "box1": 3200,
          "box4": 900,
          "box6": 16000,
          "netVat": 2300
        }
      }
    },
    {
      "id": "payslip-001",
      "documentType": "payslip",
      "fileName": "payslip-jane-doe.pdf",
      "expectedOCR": {
        "rawText": "PAYSLIP Jane Doe",
        "tokens": []
      },
      "expectedClassification": {
        "documentType": "payslip",
        "confidence": 0.93,
        "extractedData": {
          "employee": "Jane Doe",
          "grossPay": 5000,
          "netPay": 3800,
          "tax": 900,
          "currency": "GBP"
        }
      },
      "expectedLedger": {
        "entries": [
          { "accountCode": "7000", "description": "Gross Pay", "debitAmount": 5000, "creditAmount": 0 },
          { "accountCode": "2210", "description": "PAYE", "debitAmount": 0, "creditAmount": 900 }
        ]
      },
      "expectedFiling": {
        "rtistub": {
          "employee": "Jane Doe",
          "tax": 900
        }
      }
    }
  ]
}
