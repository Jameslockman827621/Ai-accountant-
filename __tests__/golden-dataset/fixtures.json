            "creditAmount": 0
          },
          {
            "accountCode": "2000",
            "description": "VAT Input",
            "debitAmount": 240.00,
            "creditAmount": 0
          }
        ]
      },
      "expectedFiling": {
        "vatReturn": {
          "box1": 240.00,
          "box4": 240.00,
          "box6": 1200.00
        }
      }
    },
    {
      "id": "receipt-001",
      "documentType": "receipt",
      "fileName": "sample-receipt.jpg",
      "expectedOCR": {
        "rawText": "RECEIPT\nDate: 2024-01-20\nTotal: £45.50\nVAT: £7.58",
        "tokens": []
      },
      "expectedClassification": {
        "documentType": "receipt",
        "confidence": 0.95,
        "extractedData": {
          "date": "2024-01-20",
          "total": 45.50,
          "tax": 7.58,
          "currency": "GBP"
        }
      },
      "expectedLedger": {
        "entries": [
          {
            "accountCode": "5000",
